<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notificationsScrollView"
        android:layout_gravity="center"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/notificationsTableLayout"
            android:showDividers="middle|end"
            android:divider="@drawable/gradient_horizontalrule"
            android:orientation="vertical">

            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/notificationsTableRow"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="true"
                android:divider="@drawable/gradient_horizontalrule">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/notificationSrcProfile"
                    android:src="@drawable/profile_dan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dan is posing a Present: Present 1"
                    android:gravity="center"
                    android:id="@+id/notificationTextView"
                    android:layout_marginLeft="10dp"/>

                <View xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@drawable/gradient_horizontalrule"
                    android:layout_below="@+id/notificationTextView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/notificationRowSeparator1" />

            </TableRow>



            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/notificationsTableRow2"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="true"
                android:divider="@drawable/gradient_horizontalrule">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/notificationSrcProfile2"
                    android:src="@drawable/profile_dan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dan is posing a Present: Present 2"
                    android:gravity="center"
                    android:id="@+id/notificationTextView2"
                    android:layout_marginLeft="10dp"/>

                <View xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradient_horizontalrule"
                    android:layout_below="@+id/notificationTextView2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/notificationRowSeparator2" />

            </TableRow>



            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/notificationsTableRow3"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="true"
                android:divider="@drawable/gradient_horizontalrule">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/notificationSrcProfile3"
                    android:src="@drawable/profile_dan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dan is posing a Present: Present 3"
                    android:gravity="center"
                    android:id="@+id/notificationTextView3"
                    android:layout_marginLeft="10dp"/>

            </TableRow>
            <!-- This will get filled programatically -->

        </TableLayout>

    </ScrollView>

</RelativeLayout>